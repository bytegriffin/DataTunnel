<?xml version="1.0" encoding="UTF-8"?>
<pool>

		<readers>
				<reader>
				       <!-- 属性id是区分不同reader或writer的 -->
				   <id>mysql_reader1</id>
				       <!-- 属性type是说明具体reader或writer的类型的 -->
				   <type>MysqlReader</type>
				       <!-- 属性open说明是否启动该数据源 -->
				   <open>true</open>
			     <url>jdbc:mysql://localhost:3306/p2p?useUnicode=true&amp;characterEncoding=UTF-8</url>
			     <user_name>root</user_name>
			     <password>root</password>
			     <pool_size>10</pool_size>
				</reader>
				<reader>
				   <id>oracle_reader1</id>
				   <type>OracleReader</type>
				   <open>false</open>
			     <url>jdbc:oracle:thin:@localhost:1521:orcl</url>
			     <user_name>test</user_name>
			     <password>test</password>
			     <pool_size>10</pool_size>
				</reader>
				<reader>
				   <id>hbase_reader1</id>
				   <type>HBaseReader</type>
				   <open>true</open>
			     <quorum>localhost</quorum>
			     <client_port>2182</client_port>
				</reader>
				<reader>
				   <id>hdfs_reader1</id>
				   <type>HdfsReader</type>
				   <open>false</open>
			     <url>hdfs://localhost:9000</url>
				</reader>
				<reader>
				   <id>hive_reader1</id>
				   <type>HiveReader</type>
				   <open>false</open>
			     <url>jdbc:hive://localhost:50000/default</url>
			     <user_name></user_name>
			     <password></password>
			     <pool_size>10</pool_size>
				</reader>
				<reader>
				   <id>mongodb_reader1</id>
				   <type>MongoDBReader</type>
				   <open>false</open>
			     <url>localhost:27017/test</url>
			     <user_name></user_name>
			     <password></password>
			     <pool_size>10</pool_size>
				</reader>
				<reader>
				   <id>redis_reader1</id>
				   <type>RedisReader</type>
				   <open>false</open>
			     <url>localhost:6379</url>
				</reader>
		</readers>

		<writers>
				<writer>
				   <id>mysql_writer1</id>
				   <type>MysqlWriter</type>
				   <open>true</open>
			     <url>jdbc:mysql://localhost:3306/p2p?useUnicode=true&amp;characterEncoding=UTF-8</url>
			     <user_name>root</user_name>
			     <password>root</password>
			     <pool_size>10</pool_size>
				</writer>
				<writer>
				   <id>oracle_writer1</id>
				   <type>OracleWriter</type>
				   <open>false</open>
			     <url>jdbc:oracle:thin:@localhost:1521:orcl</url>
			     <user_name>test</user_name>
			     <password>test</password>
			     <pool_size>10</pool_size>
				</writer>
				<writer>
				   <id>hbase_writer1</id>
				   <type>HBaseWriter</type>
				   <open>false</open>
			     <quorum>localhost</quorum>
			     <client_port>2182</client_port>
				</writer>
				<writer>
				   <id>hdfs_writer1</id>
				   <type>HdfsWriter</type>
				   <open>false</open>
			     <url>hdfs://localhost:9000</url>
				</writer>
				<writer>
				   <id>hive_writer1</id>
				   <type>HiveWriter</type>
				   <open>false</open>
			     <url>jdbc:hive://localhost:50000/default</url>
			     <user_name></user_name>
			     <password></password>
			     <pool_size>10</pool_size>
				</writer>
				<writer>
				   <id>mongodb_writer1</id>
				   <type>MongoDBWriter</type>
				   <open>true</open>
			     <url>localhost:27017/test</url>
			     <user_name></user_name>
			     <password></password>
			     <pool_size>10</pool_size>
				</writer>
				<writer>
				   <id>redis_writer1</id>
				   <type>RedisWriter</type>
				   <open>false</open>
			     <url>localhost:6379</url>
				</writer>
		</writers>

</pool>
