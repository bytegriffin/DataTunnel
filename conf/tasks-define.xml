<?xml version="1.0" encoding="UTF-8"?>
<!-- 定义task任务集合 -->
<tasks>

    <task>
    	<name>task123</name>
    	<operation>sync</operation>
    	<timer_start></timer_start>
    	<timer_interval></timer_interval>
    	<readers>
    		<reader>
    			<type>mysql</type>
    			<address>jdbc:MySQL://localhost:3306/get4j?user=root&amp;password=root&amp;useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect=true&amp;useSSL=true</address>
    			<value>select kk,vv from page</value>
    		</reader>
    	</readers>
  		<writers>
    		<writer>
    			<type>kafka</type>
    			<address>localhost:9092</address>
    			<value>insert into topic3(key,value) values ('${kk}','${vv}')</value>
    		</writer>
    	</writers>
    </task>

</tasks>
